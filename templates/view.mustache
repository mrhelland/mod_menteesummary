{{#hasmultiplementees}}
<!-- Back to Mentee Selection -->
<div class="mb-3 btn btn-secondary">
  <a href="{{backurl}}" class="text-decoration-none">
    <i class="fa fa-arrow-left me-2"></i>{{#str}} backtomentee, mod_menteesummary {{/str}}
  </a>
</div>
{{/hasmultiplementees}}

<!-- Mentee Header Card -->
<div class="card mb-3 shadow-sm">
  <div class="card-body d-flex align-items-center p-3">
    <div class="me-3">
      {{{mentee.picture}}}
    </div>
    <div>
      <small class="text-muted">{{#str}} viewingmentee, mod_menteesummary {{/str}}</small>
      <h3 class="mb-0">{{mentee.fullname}}</h3>
    </div>
  </div>
</div>

<!-- Course Tabs -->
<ul class="nav nav-tabs" id="courseTabs" role="tablist">
  {{#mentee.courses}}
    <li class="nav-item" role="presentation">
      <a class="nav-link {{#iscurrent}}active bg-primary text-white{{/iscurrent}}{{^iscurrent}}bg-secondary text-dark{{/iscurrent}}"
         id="tab-{{id}}"
         href="{{selecturl}}"
         role="tab"
         aria-controls="course-{{id}}"
         aria-selected="{{#iscurrent}}true{{/iscurrent}}{{^iscurrent}}false{{/iscurrent}}">
        <i class="fa fa-book me-2"></i>{{fullname}}
      </a>
    </li>
  {{/mentee.courses}}
</ul>

<!-- Course Content -->
<div class="menteesummary-course tab-content" id="courseTabsContent">
  {{#hascurrentcourse}}
    {{#mentee.courses}}
      <div class="tab-pane fade {{#iscurrent}}show active{{/iscurrent}}"
           id="course-{{id}}"
           role="tabpanel"
           aria-labelledby="tab-{{id}}">

        <div class="card mb-4 shadow-sm">
          <div class="card-body">

            <!-- === TOP ROW: Course name + Visit link === -->
            <div class="d-flex justify-content-between align-items-center flex-wrap mb-3 bg-secondary p-2 text-dark rounded-pill">
              <h4 class="m-0 ml-2">{{fullname}}</h4>
              <a href="{{courseurl}}" target="_blank"
                 class="text-decoration-none d-flex align-items-center mt-2 mt-md-0">
                <span>{{#str}} viewcourse, mod_menteesummary {{/str}}</span>
                <i class="fa fa-external-link-alt fa-2x ml-2 mr-2"></i>

              </a>
            </div>

            <!-- === MIDDLE ROW: Left (assignments) + Right (course icon link) === -->
            <div class="row">
              <!-- Left: Assignments -->
              <div class="col-md-7 col-12">
                <ul class="assignment-list list-group list-group-flush">
                  {{#allassignments}}
                    <li class="list-group-item">
                      <div class="d-flex align-items-start">
                        <div class="mr-2 flex-shrink-0">
                          <img src="{{categoryicon}}" alt="{{categoryname}} Icon" width="32" height="32">
                        </div>

                        <div class="flex-grow-1 min-w-0">
                          <strong class="d-block text-truncate">
                            <a href="{{activityurl}}" target="_blank" class="text-decoration-none text-dark"
                               title="{{#str}} viewassignment, mod_menteesummary {{/str}}">
                              {{name}}
                            </a>
                          </strong>
                          <small class="text-dark">{{maxgrade}} points</small>

                          <button type="button"
                                  class="btn btn-sm btn-outline-secondary mt-2 badge"
                                  data-toggle="modal"
                                  data-target="#modal-{{courseid}}-{{id}}">
                            {{#str}} viewdetails, mod_menteesummary {{/str}}
                          </button>

                          {{#hasfeedback}}
                            <span class="ml-1 align-middle"
                                  title="{{#str}} feedbackavailable, mod_menteesummary {{/str}}">
                              <i class="fa fa-comment text-info"></i>
                            </span>
                          {{/hasfeedback}}
                        </div>

                        <!-- Bootstrap Modal -->
                        <div class="modal fade" id="modal-{{courseid}}-{{id}}" tabindex="-1" role="dialog" aria-labelledby="modalLabel-{{courseid}}-{{id}}" aria-hidden="true">
                          <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                            <div class="modal-content">

                              <!-- Header -->
                              <div class="modal-header">
                                <h5 class="modal-title" id="modalLabel-{{courseid}}-{{id}}">
                                  <i class="fa fa-clipboard-list me-2"></i>{{name}}
                                </h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>

                              <!-- Body -->
                              <div class="modal-body">

                                <!-- === First Row: Info (Left) + Link (Right) === -->
                                <div class="row mb-3">

                                  <!-- Left column: assignment details -->
                                  <div class="col-md-9 col-12">
                                    <div class="d-flex align-items-center m-0 mb-2 mt-2">
                                      <img src="{{categoryicon}}" alt="{{categoryname}} Icon" width="32" class="mr-1">
                                      <div>
                                        <small class="text-muted">
                                          {{categoryname}} Category â€“ <em>{{categoryweight}}% of overall</em>
                                        </small>
                                      </div>
                                    </div>

                                    {{#hasduedate}}
                                      <div class="mb-2">
                                        <strong>{{#str}} duedate, mod_menteesummary {{/str}}:</strong> {{duedateformatted}}
                                      </div>
                                    {{/hasduedate}}

                                    {{#graded}}
                                      <div class="mb-2">
                                        <strong>{{#str}} grade, mod_menteesummary {{/str}}:</strong> {{grade}} / {{maxgrade}}
                                      </div>
                                    {{/graded}}

                                    {{^graded}}
                                      {{#submitted}}
                                        <div class="mb-2">
                                          <strong>{{#str}} status, mod_menteesummary {{/str}}:</strong>
                                          <strong class="score-submitted">{{#str}} submitted, mod_menteesummary {{/str}}</strong>
                                        </div>
                                      {{/submitted}}
                                      {{#missing}}
                                        <div class="mb-2">
                                          <strong>{{#str}} status, mod_menteesummary {{/str}}:</strong>
                                          <strong class="score-missing">{{#str}} missing, mod_menteesummary {{/str}}</strong>
                                        </div>
                                      {{/missing}}
                                    {{/graded}}
                                  </div>

                                  <!-- Right column: View assignment link -->
                                  <div class="col-md-3 col-12 text-center d-flex flex-column justify-content-center">
                                    <a href="{{activityurl}}" target="_blank" class="text-decoration-none">
                                      <i class="fa fa-external-link-alt fa-2x mb-2"></i><br>
                                      <span class="">{{#str}} viewassignment, mod_menteesummary {{/str}}</span>
                                    </a>
                                  </div>

                                </div><!-- /.row -->

                                <!-- Second Row: Feedback -->
                                <div class="row">
                                  <div class="col-12">
                                    {{#hasfeedback}}
                                      <div>
                                        <strong>{{#str}} feedback, mod_menteesummary {{/str}}:</strong>
                                        <div class="feedback-container border rounded p-2 mt-1" style="max-height:150px; overflow-y:auto;">
                                          {{#feedback}}
                                            <div class="text-muted mb-2">{{text}}</div>
                                          {{/feedback}}
                                        </div>
                                      </div>
                                    {{/hasfeedback}}

                                  </div>
                                </div>

                              </div><!-- /.modal-body -->
                            </div>
                          </div>
                        </div>

                        <!-- Right: Score -->
                        <div class="ml-auto text-right flex-shrink-0" style="min-width:140px;">
                          {{#submitted}}
                            {{#graded}}
                              <div class="score-container">
                                <div class="score-badge">{{grade}}</div>
                                <div class="progress score-progress mt-1">
                                  <div class="progress-bar"
                                       role="progressbar"
                                       style="width:{{percent}}%; background:{{scorecolor}};"
                                       aria-valuenow="{{percent}}" aria-valuemin="0" aria-valuemax="100">
                                  </div>
                                </div>
                              </div>
                            {{/graded}}
                            {{^graded}}
                              <div class="score-container">
                                <div class="score-badge score-submitted">
                                  {{#str}} submitted, mod_menteesummary {{/str}}
                                </div>
                              </div>
                            {{/graded}}
                          {{/submitted}}
                          {{#missing}}
                            <div class="score-container">
                              <div class="score-badge score-missing">
                                {{#str}} missing, mod_menteesummary {{/str}}
                              </div>
                            </div>
                          {{/missing}}
                        </div>
                      </div>
                    </li>
                  {{/allassignments}}

                  {{^allassignments}}
                    <li class="list-group-item text-muted">
                      {{#str}} noassignments, mod_menteesummary {{/str}}
                    </li>
                  {{/allassignments}}
                </ul>
              </div>

              <!-- Right: Visit this course icon 
              <div class="col-md-5 col-12 text-center d-flex flex-column justify-content-center mt-3 mt-md-0">
                <a href="{{courseurl}}" target="_blank" class="text-decoration-none text-primary">
                  <i class="fa fa-book-open fa-3x mb-2"></i><br>
                  <span class="font-weight-bold">{{#str}} viewcourse, mod_menteesummary {{/str}}</span>
                </a>
              </div>-->
            </div>

            <!-- === BOTTOM ROW: Course Grade === -->
            <div class="bg-secondary p-2 text-dark rounded-pill">
              <div class="m-0 ml-2">
                <h6 class="d-inline-block mb-0">{{#str}} moodlegrade, mod_menteesummary {{/str}}:</h6>
                <h3 class="d-inline-block mb-0">{{grade}}%</h3>
              </div>
            </div>

          </div>
        </div>
      </div>
    {{/mentee.courses}}
  {{/hascurrentcourse}}

  {{^hascurrentcourse}}
    <div class="alert alert-info text-center mt-4">
      <i class="fa fa-info-circle mr-2"></i>
      {{#str}} chooseacourse, mod_menteesummary {{/str}}
    </div>
  {{/hascurrentcourse}}
</div>


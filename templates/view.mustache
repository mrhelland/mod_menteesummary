<!-- Back to Mentee Selection -->
<div class="mb-3">
  <a href="{{backurl}}" class="text-decoration-none">
    <i class="fa fa-arrow-left me-2"></i>{{#str}} backtomentee, mod_menteesummary {{/str}}
  </a>
</div>

<!-- Mentee Header Card -->
<div class="card mb-2 shadow-sm">
  <div class="card-body d-flex align-items-center p-3">
    <div class="me-3">
      {{{mentee.picture}}}
    </div>
    <div>
      <small class="text-muted">{{#str}} viewingmentee, mod_menteesummary {{/str}}</small>
      <h3 class="mb-0">{{mentee.fullname}}</h3>
    </div>
  </div>
</div>

<!-- Course Tabs -->
<ul class="nav nav-tabs mb-3" id="courseTabs" role="tablist">
  {{#mentee.courses}}
    <li class="nav-item" role="presentation">
      <a class="nav-link {{#iscurrent}}active{{/iscurrent}}"
         id="tab-{{id}}"
         href="{{selecturl}}"
         role="tab"
         aria-controls="course-{{id}}"
         aria-selected="{{#iscurrent}}true{{/iscurrent}}{{^iscurrent}}false{{/iscurrent}}">
        <i class="fa fa-book me-2"></i>{{fullname}}
      </a>
    </li>
  {{/mentee.courses}}
</ul>

<!-- Course Content -->
<div class="menteesummary-course tab-content" id="courseTabsContent">
  {{#hascurrentcourse}}
    {{#mentee.courses}}
      <div class="tab-pane fade {{#iscurrent}}show active{{/iscurrent}}"
          id="course-{{id}}"
          role="tabpanel"
          aria-labelledby="tab-{{id}}">

        <div class="card mt-3">
          <div class="card-body">
            <div>
              <h4 class="card-title">{{fullname}} <span class="course-grade">{{grade}}%</span></h4>
              
            </div>

            <!-- Responsive assignment sections -->
            <div class="row gx-0 gx-lg-5">

              <!-- All Assignments -->
              <div class="col-12 col-lg-9 col-xl-6">
                <ul class="assignment-list list-group list-group-flush">
                  {{#allassignments}}
                    <li class="list-group-item">
                      <!-- Three-part horizontal layout -->
                      <div class="d-flex align-items-start">
                        <!-- Left: Icon -->
                        <div class="me-2 flex-shrink-0">
                          <img
                            src="{{categoryicon}}"
                            alt="{{categoryname}} Icon"
                            width="32" height="32">
                        </div>

                        <!-- Middle: Assignment info -->
                        <div class="flex-grow-1 min-w-0">
                          <strong class="d-block text-truncate">{{name}}</strong>
                          <small class="text-dark">
                            <span>{{maxgrade}} points</span>
                          </small>

                          <!-- Always-visible Details button -->
                          <button
                            type="button"
                            class="btn btn-sm btn-outline-secondary mt-2 badge"
                            data-feedback-target="#details-content-{{id}}"
                            data-title="{{#str}} details, mod_menteesummary {{/str}} â€” {{name}}"
                            data-bs-toggle="modal">
                            {{#str}} viewdetails, mod_menteesummary {{/str}}
                          </button>
                          {{#hasfeedback}}
                            <span class="ms-1 align-middle" title="{{#str}} feedbackavailable, mod_menteesummary {{/str}}">
                              <i class="fa fa-comment text-info"></i>
                            </span>
                          {{/hasfeedback}}

                          <!-- Hidden Details Container -->
                          <div id="details-content-{{id}}" class="hidden" style="display:none;">
                            <div class="mb-2"><strong>{{name}}</strong></div>

                            <div class="mb-2">
                              <strong>{{#str}} duedate, mod_menteesummary {{/str}}:</strong>
                              <div>{{duedateformatted}}</div>
                            </div>

                            <div class="mb-2">
                              <strong>{{#str}} categoryname, mod_menteesummary {{/str}}:</strong>
                              <div>{{categoryname}} ({{categoryweight}}%)</div>
                            </div>

                            {{#graded}}
                              <div class="mb-2">
                                <strong>{{#str}} earnedgrade, mod_menteesummary {{/str}}:</strong>
                                <div>{{grade}}</div>
                              </div>
                            {{/graded}}

                            <div class="mb-2">
                              <strong>{{#str}} maxgrade, mod_menteesummary {{/str}}:</strong>
                              <div>{{maxgrade}}</div>
                            </div>

                            {{#submitted}}
                              <div class="mb-2">
                                <strong>{{#str}} status, mod_menteesummary {{/str}}:</strong>
                                <div>{{#str}} submitted, mod_menteesummary {{/str}}</div>
                              </div>
                            {{/submitted}}

                            {{#missing}}
                              <div class="mb-2">
                                <strong>{{#str}} status, mod_menteesummary {{/str}}:</strong>
                                <div class="text-danger">{{#str}} missing, mod_menteesummary {{/str}}</div>
                              </div>
                            {{/missing}}

                            {{#hasfeedback}}
                              <div class="mb-2">
                                <strong>{{#str}} feedback, mod_menteesummary {{/str}}:</strong>
                                <div class="feedback-container border rounded p-2 mt-1" style="max-height:150px; overflow-y:auto;">
                                  {{#feedback}}
                                    <div class="text-muted mb-2">{{text}}</div>
                                  {{/feedback}}
                                </div>
                              </div>
                            {{/hasfeedback}}

                          </div>
                        </div>

                        <!-- Right: Score / progress (single container to keep alignment) -->
                        <div class="ms-auto text-end flex-shrink-0" style="min-width: 140px;">
                          {{#submitted}}
                            {{#graded}}
                              <div class="score-container">
                                <div class="score-badge">{{grade}}</div>
                                <div class="progress score-progress mt-1">
                                  <div
                                    class="progress-bar"
                                    role="progressbar"
                                    style="width: {{percent}}%; background: {{scorecolor}};"
                                    aria-valuenow="{{percent}}"
                                    aria-valuemin="0"
                                    aria-valuemax="100">
                                  </div>
                                </div>
                              </div>
                            {{/graded}}
                            {{^graded}}
                              <div class="score-container">
                                <div class="score-badge score-submitted">Submitted</div>
                                <div class="progress score-progress mt-1">
                                  <div
                                    class="progress-bar"
                                    role="progressbar"
                                    style="width: {{percent}}%; background: {{scorecolor}};"
                                    aria-valuenow="{{percent}}"
                                    aria-valuemin="0"
                                    aria-valuemax="100">
                                  </div>
                                </div>
                              </div>
                            {{/graded}}
                          {{/submitted}}

                          {{#missing}}
                            <div class="score-container">
                              <div class="score-badge score-missing">Missing</div>
                              <div class="progress score-progress mt-1">
                                <div
                                  class="progress-bar"
                                  role="progressbar"
                                  style="width: {{percent}}%; background: {{scorecolor}};"
                                  aria-valuenow="{{percent}}"
                                  aria-valuemin="0"
                                  aria-valuemax="100">
                                </div>
                              </div>
                            </div>
                          {{/missing}}
                        </div>
                      </div>
                    </li>
                  {{/allassignments}}

                  {{^allassignments}}
                    <li class="list-group-item text-muted">
                      {{#str}} noassignments, mod_menteesummary {{/str}}
                    </li>
                  {{/allassignments}}
                </ul>
              </div>
            </div> <!-- /.row -->
          </div>
        </div>
      </div>
    {{/mentee.courses}}
  {{/hascurrentcourse}}
  {{^hascurrentcourse}}
    <div class="alert alert-info text-center mt-4">
      <i class="fa fa-info-circle me-2"></i>
      {{#str}} chooseacourse, mod_menteesummary {{/str}}
    </div>
  {{/hascurrentcourse}}
</div>

<!-- remove this from production -->
<div>
  <span>Remove this button from production</span>
  <a href="{{downloadurl}}" class="btn btn-secondary mt-2">
    Download JSON
  </a>
</div>





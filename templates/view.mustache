<!-- Back to Mentee Selection -->
<div class="mb-3">
  <a href="{{backurl}}" class="text-decoration-none">
    <i class="fa fa-arrow-left me-2"></i>{{#str}} backtomentee, mod_menteesummary {{/str}}
  </a>
</div>

<!-- Mentee Header Card -->
<div class="card mb-3 shadow-sm">
  <div class="card-body d-flex align-items-center p-3">
    <div class="me-3">
      {{{mentee.picture}}}
    </div>
    <div>
      <small class="text-muted">{{#str}} viewingmentee, mod_menteesummary {{/str}}</small>
      <h3 class="mb-0">{{mentee.fullname}}</h3>
    </div>
  </div>
</div>

<!-- Course Tabs -->
<ul class="nav nav-tabs" id="courseTabs" role="tablist">
  {{#mentee.courses}}
    <li class="nav-item" role="presentation">
      <a class="nav-link {{#iscurrent}}active{{/iscurrent}}"
         id="tab-{{id}}"
         href="{{selecturl}}"
         role="tab"
         aria-controls="course-{{id}}"
         aria-selected="{{#iscurrent}}true{{/iscurrent}}{{^iscurrent}}false{{/iscurrent}}">
        <i class="fa fa-book me-2"></i>{{fullname}}
      </a>
    </li>
  {{/mentee.courses}}
</ul>

<!-- Course Content -->
<div class="menteesummary-course tab-content" id="courseTabsContent">
  {{#hascurrentcourse}}
    {{#mentee.courses}}
      <div class="tab-pane fade {{#iscurrent}}show active{{/iscurrent}}"
          id="course-{{id}}"
          role="tabpanel"
          aria-labelledby="tab-{{id}}">

        <div class="card">
          <div class="card-body">
            <div class="mb-3">
              <h4 class="card-title mb-0">{{fullname}} <span class="course-grade">{{grade}}%</span></h4>
              <!-- Course link icon -->
              <a href="{{courseurl}}" target="_blank" class="text-decoration-none ml-2">
                <i class="fa fa-book-open fa-lg text-primary mr-2"></i><span>{{#str}} viewcourse, mod_menteesummary {{/str}}</span>
              </a>
            </div>

            <!-- Responsive assignment sections -->
            <div class="row gx-0 gx-lg-5">

              <!-- All Assignments -->
              <div class="col-12 col-lg-9 col-xl-6">
                <ul class="assignment-list list-group list-group-flush">
                  {{#allassignments}}
                    <li class="list-group-item">
                      <!-- Three-part horizontal layout -->
                      <div class="d-flex align-items-start">
                        <!-- Left: Icon -->
                        <div class="me-2 flex-shrink-0">
                          <img
                            src="{{categoryicon}}"
                            alt="{{categoryname}} Icon"
                            width="32" height="32">
                        </div>

                        <!-- Middle: Assignment info -->
                        <div class="flex-grow-1 min-w-0">
                          <strong class="d-block text-truncate">
                            <a href="{{activityurl}}" target="_blank" class="text-decoration-none text-dark" title="{{#str}} viewassignment, mod_menteesummary {{/str}}">
                              {{name}}
                            </a>
                          </strong>
                          <small class="text-dark">
                            <span>{{maxgrade}} points</span>
                          </small>

                          <!-- Always-visible Details button -->
                          <button type="button"
                                  class="btn btn-sm btn-outline-secondary mt-2 badge"
                                  data-toggle="modal"
                                  data-target="#modal-{{courseid}}-{{id}}">
                              ðŸ“ƒ Details
                          </button>


                          {{#hasfeedback}}
                            <span class="ms-1 align-middle" title="{{#str}} feedbackavailable, mod_menteesummary {{/str}}">
                              <i class="fa fa-comment text-info"></i>
                            </span>
                          {{/hasfeedback}}
                        </div>

                        <!-- Bootstrap Modal -->
                        <div class="modal fade" id="modal-{{courseid}}-{{id}}" tabindex="-1" role="dialog" aria-labelledby="modalLabel-{{courseid}}-{{id}}" aria-hidden="true">
                          <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                            <div class="modal-content">

                              <!-- Header -->
                              <div class="modal-header">
                                <h5 class="modal-title" id="modalLabel-{{courseid}}-{{id}}">
                                  <i class="fa fa-clipboard-list me-2"></i>{{name}}
                                </h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>

                              <!-- Body -->
                              <div class="modal-body">

                                <!-- === First Row: Info (Left) + Link (Right) === -->
                                <div class="row mb-3">

                                  <!-- Left column: assignment details -->
                                  <div class="col-md-9 col-12">
                                    <div class="d-flex align-items-center mb-3">
                                      <img src="{{categoryicon}}" alt="{{categoryname}} Icon" width="42" class="mr-2">
                                      <div>
                                        <small class="text-muted">
                                          {{categoryname}} Category â€“ <em>{{categoryweight}}% of overall</em>
                                        </small>
                                      </div>
                                    </div>

                                    {{#hasduedate}}
                                      <div class="mb-2">
                                        <strong>{{#str}} duedate, mod_menteesummary {{/str}}:</strong> {{duedateformatted}}
                                      </div>
                                    {{/hasduedate}}

                                    {{#graded}}
                                      <div class="mb-2">
                                        <strong>{{#str}} grade, mod_menteesummary {{/str}}:</strong> {{grade}} / {{maxgrade}}
                                      </div>
                                    {{/graded}}

                                    {{^graded}}
                                      {{#submitted}}
                                        <div class="mb-2">
                                          <strong>{{#str}} status, mod_menteesummary {{/str}}:</strong>
                                          <strong class="score-submitted">{{#str}} submitted, mod_menteesummary {{/str}}</strong>
                                        </div>
                                      {{/submitted}}
                                      {{#missing}}
                                        <div class="mb-2">
                                          <strong>{{#str}} status, mod_menteesummary {{/str}}:</strong>
                                          <strong class="score-missing">{{#str}} missing, mod_menteesummary {{/str}}</strong>
                                        </div>
                                      {{/missing}}
                                    {{/graded}}
                                  </div>

                                  <!-- Right column: View assignment link -->
                                  <div class="col-md-3 col-12 text-center d-flex flex-column justify-content-center">
                                    <a href="{{activityurl}}" target="_blank" class="text-decoration-none text-primary">
                                      <i class="fa fa-external-link-alt fa-3x mb-2"></i><br>
                                      <span class="font-weight-bold">{{#str}} viewassignment, mod_menteesummary {{/str}}</span>
                                    </a>
                                  </div>

                                </div><!-- /.row -->

                                <!-- Second Row: Feedback -->
                                <div class="row">
                                  <div class="col-12">
                                    {{#hasfeedback}}
                                      <div>
                                        <strong>{{#str}} feedback, mod_menteesummary {{/str}}:</strong>
                                        <div class="feedback-container border rounded p-2 mt-1" style="max-height:150px; overflow-y:auto;">
                                          {{#feedback}}
                                            <div class="text-muted mb-2">{{text}}</div>
                                          {{/feedback}}
                                        </div>
                                      </div>
                                    {{/hasfeedback}}

                                    {{^hasfeedback}}
                                      <div class="text-muted"><em>{{#str}} nofeedback, mod_menteesummary {{/str}}</em></div>
                                    {{/hasfeedback}}
                                  </div>
                                </div>

                              </div><!-- /.modal-body -->
                            </div>
                          </div>
                        </div>
                        

                        <!-- Right: Score / progress (single container to keep alignment) -->
                        <div class="ms-auto text-end flex-shrink-0" style="min-width: 140px;">
                          {{#submitted}}
                            {{#graded}}
                              <div class="score-container">
                                <div class="score-badge">{{grade}}</div>
                                <div class="progress score-progress mt-1">
                                  <div
                                    class="progress-bar"
                                    role="progressbar"
                                    style="width: {{percent}}%; background: {{scorecolor}};"
                                    aria-valuenow="{{percent}}"
                                    aria-valuemin="0"
                                    aria-valuemax="100">
                                  </div>
                                </div>
                              </div>
                            {{/graded}}
                            {{^graded}}
                              <div class="score-container">
                                <div class="score-badge score-submitted">Submitted</div>
                                <div class="progress score-progress mt-1">
                                  <div
                                    class="progress-bar"
                                    role="progressbar"
                                    style="width: {{percent}}%; background: {{scorecolor}};"
                                    aria-valuenow="{{percent}}"
                                    aria-valuemin="0"
                                    aria-valuemax="100">
                                  </div>
                                </div>
                              </div>
                            {{/graded}}
                          {{/submitted}}

                          {{#missing}}
                            <div class="score-container">
                              <div class="score-badge score-missing">Missing</div>
                              <div class="progress score-progress mt-1">
                                <div
                                  class="progress-bar"
                                  role="progressbar"
                                  style="width: {{percent}}%; background: {{scorecolor}};"
                                  aria-valuenow="{{percent}}"
                                  aria-valuemin="0"
                                  aria-valuemax="100">
                                </div>
                              </div>
                            </div>
                          {{/missing}}
                        </div>
                      </div>
                    </li>
                  {{/allassignments}}

                  {{^allassignments}}
                    <li class="list-group-item text-muted">
                      {{#str}} noassignments, mod_menteesummary {{/str}}
                    </li>
                  {{/allassignments}}
                </ul>
              </div>
            </div> <!-- /.row -->
          </div>
        </div>
      </div>
    {{/mentee.courses}}
  {{/hascurrentcourse}}
  {{^hascurrentcourse}}
    <div class="alert alert-info text-center mt-4">
      <i class="fa fa-info-circle me-2"></i>
      {{#str}} chooseacourse, mod_menteesummary {{/str}}
    </div>
  {{/hascurrentcourse}}
</div>





<div class="menteesummary-chooser container-fluid">
  <div class="row g-3">
    {{#mentees}}
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card h-100 mentee-card" data-userid="{{id}}">
          <div class="card-body">
            <div class="d-flex align-items-center mb-3">
              <div class="me-3">
                <a href="{{profileurl}}" class="d-inline-block">
                  {{{profilepic}}}
                </a>
              </div>
              <div>
                <h4 id="fullname" class="fw-bold fs-5">{{fullname}}</h4>
                <div id="username" class="text-muted small">{{username}}</div>
              </div>
            </div>
            <div class="text-end">
              <a href="{{url}}" class="btn btn-primary">
                {{#str}} viewgrades, mod_menteesummary {{/str}}
              </a>
            </div>
          </div>
        </div>
      </div>
    {{/mentees}}

    {{^mentees}}
      <div class="col-12">
        <p class="text-muted text-center">
          {{#str}} nomentees, mod_menteesummary {{/str}}
        </p>
      </div>
    {{/mentees}}
  </div>
</div>
